@model BomoBana.Areas.Admin.CategoryViewModel
<div id="add-contact" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width: 850px!important;">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">ارسال فایل اکسل لیست دسته بندی محصولات</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <form class="form-horizontal form-material needs-validation" novalidate enctype="multipart/form-data"
                      asp-area="Admin" asp-action="AddCategoryWithExcel" asp-controller="Category" method="post">
                    <div class="form-group row">
                        <div asp-validation-summary="ModelOnly"></div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12 m-b-20">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">فایل اکسل</span>
                                </div>
                                <div class="custom-file">
                                    <input type="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
                                           asp-for="CategoryExel.File" class="custom-file-input">
                                    <label class="custom-file-label" for="Image">انتخاب فایل</label>
                                </div>
                            </div>
                            <small id="textHelp" class="form-text text-muted">فرمت فایل باید xlsx باشد</small>
                            <span asp-validation-for="CategoryExel.File"></span>
                            <div class="show-file">
                                <span class="badge badge-success ml-auto count-file">1</span>
                                <output class="element-to-paste-filename"></output>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-info waves-effect">ارسال</button>
                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">انصراف</button>
                    </div>
                </form>
                <div class="form-group row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">آپلود عکس</h4>
                                <h6 class="card-subtitle">بعد از آپلود فایل عکس عکس های دسته بندی را در اینجا آپلود کنید </h6>
                                <form action="#" class="dropzone">
                                    <div class="fallback">
                                        <input name="file" type="file" multiple />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


