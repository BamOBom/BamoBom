@model BomoBana.Areas.Admin.VerifyPhoneNumberViewModel
@{
    ViewData["Title"] = "تائید کد";
    Layout = "~/Areas/Admin/Views/Shared/_Login.cshtml";
}

<div id="loginform">
    <div class="logo">
        <span class="db"><img src="~/admin/assets/images/logo-icon.png" alt="logo" /></span>
        <h5 class="font-medium m-b-20">تائید کد ارسال شده</h5>
        <span>لطفا کد ارسال شده به شماره @Model.PhoneNumber را وارد نمائید!</span>

    </div>
    <!-- Form -->
    <div class="row">
        <div class="col-12">
            <form class="form-horizontal m-t-20" id="Verifyform" asp-area="Admin" asp-action="VerifyPhoneNumber"
                  asp-controller="Account" method="post" asp-route-returnurl="Admin/Account/Login">

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon3"><i class="ti-pencil"></i></span>
                    </div>
                    <input type="text" asp-for="@Model.Code" class="form-control form-control-lg" placeholder="کد ارسال شده" aria-label="Username" aria-describedby="basic-addon3">
                </div>
                <div class="input-group mb-3">
                    <input type="hidden" asp-for="@Model.PhoneNumber">
                </div>

                <div class="form-group text-center">
                    <div class="col-xs-12 p-b-20">
                        <button class="btn btn-block btn-lg btn-info" type="submit">تائید</button>
                    </div>
                    <div asp-validation-summary="ModelOnly"></div>
                    <span asp-validation-for="@Model.Code"></span>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
