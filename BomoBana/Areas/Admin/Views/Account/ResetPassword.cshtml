@model BomoBana.Areas.Admin.ResetPasswordModel
@{
    ViewData["Title"] = "بازنگاری گذرواژه";
    Layout = "~/Areas/Admin/Views/Shared/_Login.cshtml";
}

<div>
    <div class="logo">
        <span class="db"><img src="~/admin/assets/images/logo-icon.png" alt="logo" /></span>
        <h5 class="font-medium m-b-20">بازنگاری گذرواژه ورود به سامانه</h5>
        <span>لطفا گذر واژه جدید خود را وارد نمائید</span>
    </div>
    <!-- Form -->
    <div class="row">
        <div class="col-12">
            <form class="form-horizontal m-t-20" id="Resetform"  asp-area="Admin" asp-action="ResetPassword"
                  asp-controller="Account" method="post">

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon4"><i class="ti-pencil"></i></span>
                    </div>
                    <input type="password" asp-for="@Model.Password" autocomplete="off" class="form-control form-control-lg" placeholder="گذرواژه جدید" aria-label="Username" aria-describedby="basic-addon4">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon5"><i class="ti-pencil"></i></span>
                    </div>
                    <input type="password" asp-for="@Model.ConfirmPassword" autocomplete="off" class="form-control form-control-lg" placeholder="تکرار گذرواژه جدید" aria-label="Password" aria-describedby="basic-addon5">
                    <input type="hidden" asp-for="@Model.PhoneNumber">
                    <input type="hidden" asp-for="@Model.Token">
                </div>
               
                <div class="form-group text-center">
                    <div class="col-xs-12 p-b-20">
                        <button class="btn btn-block btn-lg btn-info" type="submit">ورود</button>
                    </div>
                    <div asp-validation-summary="ModelOnly"></div>
                    <span asp-validation-for="@Model.PhoneNumber"></span>
                    <span asp-validation-for="@Model.ConfirmPassword"></span>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}