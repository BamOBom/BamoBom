@model BomoBana.Areas.Admin.DetailBlogDto
@using Common
<div id="DetailPageLoad" class="modal fade in" tabindex="-1"
     role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width: 650px!important;">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">جزئیات مطلب</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <div class=" row">
                        <div class=" col-md-8">
                            <h4 class="card-title">@Model.Title</h4>
                            <h6 class="card-subtitle mb-2 text-muted" style="margin: 15px auto;text-align: justify;">@Model.Caption</h6>
                        </div>
                        <div class=" col-md-4">
                            <img src="@Url.Content(string.Format(ApplicationPathes.Blog.VirtualFolder, Model.Image))" alt="@Model.Title" width="100%" />
                        </div>
                    </div>
                    <div class="card-text" style="margin-top: 20px;text-align: justify;">
                        @Html.Raw(Model.Content)
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">انصراف</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


